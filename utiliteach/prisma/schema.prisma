generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  firstName  String
  middleName String?
  lastName   String
  Suffix     String?
  email      String
  password   String
  userType   String
  createdAt  DateTime
  Section    Section[]
}

model Section {
  id          Int       @id @default(autoincrement())
  sectionName String
  Session     Session[]
  Student     Student?  @relation(fields: [studentId], references: [id])
  studentId   Int?
  teacher     User      @relation(fields: [teacherId], references: [id])
  teacherId   Int
}

model Subject {
  id         Int    @id @default(autoincrement())
  name       String
  gradeLevel Int
}

model Session {
  id         Int          @id @default(autoincrement())
  section    Section      @relation(fields: [sectionId], references: [id])
  sectionId  Int
  date       DateTime
  Attendance Attendance[]
  Question   Question[]
}

model Attendance {
  id        Int     @id @default(autoincrement())
  session   Session @relation(fields: [sessionId], references: [id])
  sessionId Int
  student   Student @relation(fields: [studentId], references: [id])
  studentId Int
  isLate    Boolean @default(false)
}

model Student {
  id         Int          @id @default(autoincrement())
  firstName  String
  middleName String?
  lastName   String
  Suffix     String?
  gradeLevel Int
  lrn        String
  sections   Section[]
  Attendance Attendance[]
}

model Question {
  id        Int     @id @default(autoincrement())
  session   Session @relation(fields: [sessionId], references: [id])
  sessionId Int
  question  String
}

model Term {
  id        Int      @id @default(autoincrement())
  termStart DateTime
  termEnd   DateTime
}
